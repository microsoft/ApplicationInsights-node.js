{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "inlineSources": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "outDir": "./out",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "Bootstrap/*.ts",
        "*.ts",
        "AutoCollection/diagnostic-channel/*.ts",
        "Tests/**/*.ts"
    ],
    "files": [
        "./node_modules/@types/cls-hooked/index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "Tests/FunctionalTests",
        "Tests/BackCompatibility"
    ]
}
