{
    "compilerOptions": {
        "target": "ES2017",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "inlineSources": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "outDir": "./out",
        "types": ["node", "mocha"],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "applicationinsights.ts",
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test/functionalTests",
        "test/backCompatibility",
        "test/performanceTests",
    ]
}