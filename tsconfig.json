{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "inlineSources": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "outDir": "./out",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/bootstrap/*.ts",
        "*.ts",
        "src/autoCollection/diagnostic-channel/*.ts",
        "test/**/*.ts"
, "src/applicationinsights.ts"    ],
    "exclude": [
        "node_modules",
        "test/functionalTests",
        "test/backCompatibility"
    ]
}
